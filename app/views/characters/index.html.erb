<h1>Characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= link_to character.name, [@campaign, character] %></td>
    <td><%= character.character_class %></td>
    <td><%= link_to "*", "#", :title=>character.description, :style=>"text-decoration: none" unless character.description.blank? %></td>
    <td><%= link_to 'Show', [@campaign, character] %></td>
    <td><%= link_to 'Edit', edit_campaign_character_path(@campaign, character) %></td>
    <td><%= link_to 'Destroy', [@campaign, character], :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'stats', campaign_character_stats_path(@campaign, character) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Character', new_campaign_character_path(@campaign) %>
