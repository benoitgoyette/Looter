<%= form_for([@campaign, @character]) do |f| %>
  <%= f.error_messages %>

    Campaign: <%= @campaign.title %><br /><br />
    <%= hidden_field_tag 'character[campaign_id]', @campaign.id %>
    <%= hidden_field_tag 'character[user_id]', current_user.id %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :class %><br />
    <%= f.text_field :character_class %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :original_hit_points %><br />
    <%= f.text_area :original_hit_points %>
  </div>
  
  <div class="actions">
    <%= f.submit %><%= f.submit("Save and continue", :name=>"continue") unless @character.id.blank?%>
  </div>
<% end %>
